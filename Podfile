# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'TastyTraveler' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for TastyTraveler
  # Firebase
  pod 'Firebase/Core'
  pod 'Firebase/Database'
  pod 'Firebase/Auth'
  pod 'Firebase/Storage'
  pod 'Firebase/Messaging'
  
  # Facebook
  pod 'FacebookCore'
  pod 'FacebookLogin'
  pod 'FacebookShare'
  
  # Programmatic Constraints
  pod 'SteviaLayout'
  
  # Transitions
  pod 'Hero'
  
  # Encoding and Decoding models for Firebase
  pod 'CodableFirebase'
  
  # Image Crop
  pod 'RSKImageCropper'
  
  # Loading indicators
  pod 'SVProgressHUD'
  
  # Star Rating Control
  pod 'Cosmos', '~> 15.0'
  
  # Popover view
  pod 'Popover'
  
  pod 'GSKStretchyHeaderView'
  
  pod 'TagCellLayout', :git => 'https://github.com/riteshhgupta/TagCellLayout.git'
  
  pod 'Eureka'
  
  pod 'Fabric', '~> 1.7.7'
  pod 'Crashlytics', '~> 3.10.2'
  pod 'SwiftySound'
  pod 'ws', :git => 'https://github.com/freshOS/ws'
  

  pod 'AMProgressBar'
  
end
